{
    "platform": "ios",
    "common": [
        {
            "runs-on": ["macos-latest"],
            "checkout": {
                "path": "./"
            }
        }
    ],

    "build": [
        {
            "name": "Build Source Code",
            "type": "fastlane",
            "fastlane": {
                "lane": "buildiOSSource",
                "working_repo": "./",
                "fastlane_repo": "awasthi027/iosBuildScripts"
            }
        }
    ],

    "test": [
        {
            "name": "Test Source Code",
            "type": "fastlane",
            "fastlane": {
                "lane": "testiOSSource",
                "working_repo": "./",
                "fastlane_repo": "awasthi027/iosBuildScripts"
            }
        },
        {
            "name": "Pod Lib Lint",
            "type": "fastlane",
            "fastlane": {
                "lane": "podLibLint",
                "working_repo": "./",
                "fastlane_repo": "awasthi027/iosBuildScripts"
            }
        }
    ]
}

